{
  "manifest_version": 3,
  "name": "Salesforce Field Finder",
  "version": "1.0.0",
  "description": "Streamline Salesforce development with ID-based navigation and intelligent formula beautification.",
  "permissions": [
    "storage",
    "tabs",
    "cookies",
	"activeTab"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.my.salesforce.com/*",
    "https://*.my.salesforce-setup.com/*",
	"https://*.builder.salesforce-experience.com/*",
	"https://*.cloudforce.com/*",
	"https://*.cloudforce.mil/*",
	"https://*.crmforce.mil/*",
	"https://*.force.com.mcas.ms/*",
	"https://*.force.mil/*",
	"https://*.salesforce.com/*",
	"https://*.salesforce.mil/*",
	"https://*.sfcrmapps.cn/*",
	"https://*.sfcrmproducts.cn/*",
	"https://*.visualforce.com/*",
	"https://*.visualforce.mil/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}